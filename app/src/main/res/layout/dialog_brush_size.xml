<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/small_brush_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/small_brush_image"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/small_brush"
        app:layout_constraintBottom_toTopOf="@id/medium_brush_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/medium_brush_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/medium_brush_image"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/medium_brush"
        app:layout_constraintBottom_toTopOf="@id/large_brush_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/small_brush_image_button" />

    <ImageButton
        android:id="@+id/large_brush_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/large_brush_image"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/medium_brush"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medium_brush_image_button" />

</androidx.constraintlayout.widget.ConstraintLayout>